citHeader("To cite package 'maxLinear' in publications use:")
desc <- packageDescription("maxLinear")
year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", desc$Date)
vers <- paste("R package version", desc$Version)

citEntry(entry="Manual",
title = "maxLinear: Conditional Sampling for Max-Linear Models",
author = personList(as.person("Yizao Wang")),
year = year,
note = vers,
textVersion = paste("Yiao Wang, ", year, ". maxLinear: Conditional Sampling for Max-Linear Models. ", vers, ".", sep=""))

